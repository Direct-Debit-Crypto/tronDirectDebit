import Home from './pages/Home';
import Connect from './pages/Connect';
import NewDirectDebit from './pages/NewDirectDebit';
import ListDebit from './pages/ListDebit';
import WhitelistedVendors from './pages/WhitelistedVendors';
import NewInvoice from './pages/NewInvoice';
import { AuthGuard } from './interactTronAPI/WalletConnected.tsx.old';

export const routeNames = {
    home: '/',
    connect: '/connect',
    new_direct_debit: '/new-direct-debit',
    list_debits: '/list-debits',
    whitelisted_vendors: '/whitelisted-vendors',
    new_invoice: '/new-invoice',
  };
  
const appRoutes: Routes = [
    { path: 'login', component: Connect },

    // home route protected by auth guard
    { path: '',                      component: Home | '',                canActivate: [AuthGuard] },
    { path: '/new-direct-debit',     component: NewDirectDebit,      canActivate: [AuthGuard] },           
    { path: '/list-debits',          component: ListDebit,           canActivate: [AuthGuard] },      
    { path: '/whitelisted-vendors',  component: WhitelistedVendors,  canActivate: [AuthGuard] },              
    { path: '/new-invoice',          component: NewInvoice,          canActivate: [AuthGuard] },      

    // otherwise redirect to home
    { path: '**', redirectTo: '' }
];

export const routes = RouterModule.forRoot(appRoutes);